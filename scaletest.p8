pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
function _init()
	screen = 0
	ssprexample = {
		x=32,
		y=32
	}
end

function _update()

	if btnp(4) then
		screen += 1
	end
	
	if screen == 2 then
		if btn(0) then
			ssprexample.x -= 1
		end
		if btn(1) then
			ssprexample.x += 1
		end
		if btn(2) then
			ssprexample.y -= 1
		end
		if btn(3) then
			ssprexample.y += 1
		end
	end
end


function _draw()
	cls()
	color(1)
	rect(0,0,127,127)
	if screen == 0 then
		
		color(8)
		print("top left!",0,0)
		print("top right!",90,0)
		print("bottom left!",0,123)
		print("bottom right!",78,123)
	elseif screen == 1 then
		color(8)
		print("spr is fun!",45,64)
		spr(1,1,1)
		spr(2,119,1)
		spr(3,1,119)
		spr(4,119,119)
	elseif screen == 2 then
		color(8)
		print("so is sspr!",43,0)
		print(ssprexample.x)
		print(ssprexample.y)
		spr(7,64,64,4,4)
		sspr(40,0,16,16,64,64,ssprexample.x, ssprexample.y)
	end
end
